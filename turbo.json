{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["build/**", "dist/**"],
      "env": ["REACT_APP_BASEPATH"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["REACT_APP_BASEPATH"]
    },
    "db:push": {
      "cache": false
    },
    "prepare": {
      "cache": false
    },
    "@marble/backend#predev": {
      "cache": false
    },
    "@marble/api#predev": {
      "cache": false,
      "dependsOn": ["@marble/backend#predev"]
    },
    "predev": {
      "cache": false,
      "dependsOn": ["prepare", "@marble/api#predev"]
    }
  }
}
