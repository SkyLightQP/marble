{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".eslintrc.js", ".prettierrc"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "db:push": {
      "cache": false
    },
    "prepare": {
      "cache": false
    },
    "predev": {
      "cache": false,
      "dependsOn": ["^prepare"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["build/**", "dist/**"],
      "dependsOn": ["^prepare", "^predev"]
    },
    "start": {
      "cache": false
    },
    "lint": {
      "cache": false
    }
  }
}

